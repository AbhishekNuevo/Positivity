<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:background="#E8E3E3"
  android:layout_height="wrap_content">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F4EDED"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" >

    <RelativeLayout
      android:id="@+id/rl_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">



    <RelativeLayout
      android:id="@+id/rl_image_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/iv_positivity"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/a1" />


      <TextView
        android:id="@+id/tv_positivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:typeface="normal"
        android:layout_alignBottom="@+id/iv_positivity"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:text="@string/demo_quote" />
    </RelativeLayout>
      <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:weightSum="3"
        android:layout_below="@+id/rl_image_container"
        android:orientation="horizontal">

        <LinearLayout
          android:id="@+id/ll_like"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:background="?android:attr/selectableItemBackground"
          android:orientation="vertical">
          <ImageView
            android:id="@+id/im_heart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_favorite_border_24"/>
          <TextView
            android:id="@+id/tv_like_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="you &amp; 730 others"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/ll_save"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:background="?android:attr/selectableItemBackground"
          android:orientation="vertical">
          <ImageView
            android:id="@+id/im_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_save_alt_24"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Save"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/ll_share"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:background="?android:attr/selectableItemBackground"
          android:orientation="vertical">
          <ImageView
            android:id="@+id/im_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_share_24"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Share"/>
        </LinearLayout>
      </LinearLayout>
    </RelativeLayout>
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
